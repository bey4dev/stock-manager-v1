# Production Environment Variables
NODE_ENV=production

# Google API Configuration (UPDATE THESE FOR PRODUCTION)
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id_here
VITE_GOOGLE_SHEETS_API_KEY=your_production_sheets_api_key_here

# Application Configuration
VITE_APP_NAME=Stock Manager V1
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Security (Generate secure random strings)
SESSION_SECRET=your_very_secure_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Database Configuration (if using database)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=stock_manager
# DB_USER=your_db_user
# DB_PASS=your_db_password

# External Services
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email
# SMTP_PASS=your_email_password

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=your_ga_id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_LOGGING=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
